// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  price       Int
  createdAt   DateTime
  category    Category @relation(fields: [categoryId],references: [id])
  categoryId  Int
}

model Category{
  id          Int    @id @default(autoincrement())
  name        String
  products    Product[]  
}